@{
    var strUrl = HttpContext.Current.Request.Url.AbsolutePath;

    var navigationMenu = (IEnumerable<KamikazeThinhPhat.Web.Models.ProductCategoryViewModel>)ViewBag.NavigationMenu;
    var navigationMenuChild = (IEnumerable<KamikazeThinhPhat.Web.Models.ProductCategoryViewModel>)ViewBag.NavigationMenuChild;
}

<div class="navbar-wrapper">
    <div class="container">
        <nav class="navbar navbar-inverse navbar-static-top cl-effect-5">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="default.html"><h1>ThinhPhat INC</h1></a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">

                    <ul class="nav navbar-nav navbar-right">

                        @if (navigationMenu.Count() > 0)
                        {
                            var count = 0;
                            var countSub = 0;
                            foreach (var item in navigationMenu)
                            {
                                count = count + 1;
                                var Url = "/" + item.MetaKeyword + "-index.html";
                                if (strUrl.Contains(item.MetaKeyword))
                                {
                                    <li class="active">
                                        <a href="@Url" class="dropdown-toggle">
                                            <span data-hover="@item.Name">@item.Name</span>
                                        </a>
                                        @if (navigationMenuChild.Count() > 0)
                                        {
                                            foreach (var tamp in navigationMenuChild)
                                            {
                                                if (item.ID == tamp.ParentID)
                                                {
                                                    countSub = countSub + 1;
                                                    break;
                                                }

                                            }
                                            if (countSub > 0)
                                            {
                                                <ul class="dropdown-menu multi-column columns-3">

                                                    @foreach (var itemChild in navigationMenuChild)
                                                    {
                                                        if (itemChild.ParentID == item.ID)
                                                        {
                                                            var UrlChild = "";
                                                            if (itemChild.MetaKeyword=="about")
                                                            {
                                                                UrlChild = "/" + item.MetaKeyword + ".index-" + itemChild.Alias +".html";
                                                            }
                                                            else
                                                            {
                                                                UrlChild = "/" + item.MetaKeyword + ".index-" + itemChild.Alias + "-" + itemChild.ID + ".html";
                                                            }

                                                            <li>
                                                                <a href="@UrlChild">@itemChild.Name</a>
                                                                <ul class="dropdown-menu multi-column columns-3 dropdown-menu-sub">

                                                                    @foreach (var itemChildChild in navigationMenuChild)
                                                                    {
                                                                        if (itemChildChild.ParentID == itemChild.ID)
                                                                        {
                                                                            var UrlChildchild = "/"+item.MetaKeyword+".index-" + itemChildChild.Alias + "-" + itemChildChild.ID+ ".html";

                                                                            <li><a href="@UrlChildchild">@itemChildChild.Name</a></li>

                                                                        }
                                                                    }
                                                                </ul>
                                                            </li>

                                                        }
                                                    }
                                                </ul>
                                            }
                                            else
                                            {
                                                <ul class="multi-column columns-3">
                                                    <li>
                                                        @foreach (var itemChild in navigationMenuChild)
                                                        {
                                                            if (itemChild.ParentID == item.ID)
                                                            {
                                                                var UrlChild = "";
                                                                if (itemChild.MetaKeyword=="about")
                                                                {
                                                                    UrlChild = "/" + item.MetaKeyword + ".index-" + itemChild.Alias + ".html";
                                                                }
                                                                else
                                                                {
                                                                    UrlChild = "/" + item.MetaKeyword + ".index-" + itemChild.Alias + "-" + itemChild.ID + ".html";
                                                                }
                                                                <a href="@UrlChild">@itemChild.Name</a>

                                                            }
                                                        }
                                                    </li>
                                                </ul>
                                            }

                                        }
                                        @if (count > 1)
                                        {
                                            <span class="line1">/</span>
                                        }
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a href="@Url" class="dropdown-toggle">
                                            <span data-hover="@item.Name">@item.Name</span>
                                        </a>
                                        @if (navigationMenuChild.Count() > 0)
                                        {
                                            foreach (var tamp in navigationMenuChild)
                                            {
                                                if (item.ID == tamp.ParentID)
                                                {
                                                    countSub = countSub + 1;
                                                    break;
                                                }

                                            }

                                            if (countSub > 0)
                                            {
                                                <ul class="dropdown-menu multi-column columns-3">

                                                    @foreach (var itemChild in navigationMenuChild)
                                                    {
                                                        if (itemChild.ParentID == item.ID)
                                                        {
                                                            var UrlChild = "";
                                                            if (itemChild.MetaKeyword =="about")
                                                            {
                                                                UrlChild = "/" + item.MetaKeyword + ".index-" + itemChild.Alias + ".html";
                                                            }
                                                            else
                                                            {
                                                                UrlChild = "/" + item.MetaKeyword + ".index-" + itemChild.Alias + "-" + itemChild.ID + ".html";
                                                            }
                                                            <li>
                                                                <a href="@UrlChild">@itemChild.Name</a>
                                                                <ul class="dropdown-menu multi-column columns-3 dropdown-menu-sub">

                                                                    @foreach (var itemChildChild in navigationMenuChild)
                                                                    {
                                                                        if (itemChildChild.ParentID == itemChild.ID)
                                                                        {
                                                                            var UrlChildchild = "/" +item.MetaKeyword+".index-"+ itemChildChild.Alias + "-" + itemChildChild.ID + ".html";

                                                                            <li><a href="@UrlChildchild">@itemChildChild.Name</a></li>

                                                                        }
                                                                    }
                                                                </ul>
                                                            </li>

                                                        }
                                                    }
                                                </ul>
                                            }
                                            else
                                            {
                                                <ul class="multi-column columns-3">
                                                    <li>
                                                        @foreach (var itemChild in navigationMenuChild)
                                                        {
                                                            if (itemChild.ParentID == item.ID)
                                                            {

                                                                var UrlChild = "";
                                                                if (itemChild.MetaKeyword=="about")
                                                                {
                                                                    UrlChild = "/" + item.MetaKeyword + ".index-" + itemChild.Alias + ".html";
                                                                }
                                                                else
                                                                {
                                                                    UrlChild = "/" + item.MetaKeyword + ".index-" + itemChild.Alias + "-" + itemChild.ID + ".html";
                                                                }
                                                                <a href="@UrlChild">@itemChild.Name</a>

                                                            }
                                                        }
                                                    </li>
                                                </ul>
                                            }

                                        }
                                        @if (count > 1)
                                        {
                                            <span class="line1">/</span>
                                        }
                                    </li>
                                }

                                countSub = 0;

                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </div>
</div>